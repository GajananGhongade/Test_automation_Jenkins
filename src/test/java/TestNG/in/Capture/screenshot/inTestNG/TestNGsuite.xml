<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Capturing Screenshot demo">
    <listeners>
        <listener class-name="TestNG.in.Capture.screenshot.inTestNG.Listeners"/>
    </listeners>
    <test name="Capture Screenshot for failed Test Cases">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="TestNG.in.Capture.screenshot.inTestNG.BaseClass"/>
            <!--            <class name="TestNG.in.GroupTestCases"/>-->
        </classes>
    </test>
</suite>







